{
  "name": "vening-api",
  "version": "1.0.0",
  "description": "Vending machine API",
  "main": "src/index.ts",
  "scripts": {
    "dev": "npm run nodemon",
    "nodemon": "NODE_ENV=development nodemon --watch 'src/**/*.ts' -r ts-node/register/transpile-only -r tsconfig-paths/register -r dotenv/config --exec 'ts-node --files' src/index.ts",
    "build": "tsc",
    "start": "NODE_PATH=dist/ NODE_ENV=production node dist/src/index.js",
    "test": "export NODE_ENV=test NODE_PATH=./; jest --passWithNoTests --coverage",
    "test:watch": "export NODE_ENV=test; jest --watchAll",
    "coverage": "export NODE_ENV=test; jest --coverage",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "prettier": "prettier --check src/**/*.ts",
    "prettier:fix": "prettier --write ",
    "docs": "apidoc -i src/ -o public/",
    "prepare": "husky install"
  },
  "keywords": [
    "nodejs",
    "express",
    "mongoose",
    "typescript"
  ],
  "author": "gagocarrilloedgar",
  "license": "MIT",
  "devDependencies": {
    "@types/compression": "^1.7.0",
    "@types/cors": "^2.8.10",
    "@types/express": "^4.17.11",
    "@types/express-session": "^1.17.4",
    "@types/faker": "^5.5.5",
    "@types/glob": "^7.1.3",
    "@types/jest": "^26.0.23",
    "@types/jsonwebtoken": "^8.5.1",
    "@types/morgan": "^1.9.2",
    "@types/node": "^14.18.2",
    "@types/passport": "^1.0.7",
    "@types/passport-anonymous": "^1.0.3",
    "@types/passport-jwt": "^3.0.6",
    "@types/supertest": "^2.0.11",
    "@typescript-eslint/eslint-plugin": "^5.12.1",
    "@typescript-eslint/parser": "^5.12.1",
    "coveralls": "^3.1.0",
    "eslint": "^7.32.0",
    "eslint-config-standard": "^16.0.3",
    "eslint-plugin-import": "^2.25.4",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^5.2.0",
    "faker": "^5.5.3",
    "husky": "^7.0.0",
    "jest": "^26.6.3",
    "lint-staged": "^12.3.4",
    "prettier": "^2.3.0",
    "supertest": "^6.2.2",
    "ts-jest": "^26.5.6",
    "ts-node": "^9.1.1",
    "tsconfig-paths": "^3.9.0",
    "typescript": "^4.2.4"
  },
  "dependencies": {
    "@types/superagent": "^4.1.14",
    "compression": "^1.7.4",
    "connect-mongo": "^4.6.0",
    "cors": "^2.8.5",
    "dotenv": "^16.0.0",
    "dotenv-safe": "^8.2.0",
    "express": "^4.17.3",
    "express-mongo-sanitize": "^2.1.0",
    "express-session": "^1.17.2",
    "helmet": "^5.0.2",
    "http-status": "^1.5.0",
    "jsonwebtoken": "^8.5.1",
    "mongodb-memory-server": "^8.3.0",
    "mongoose": "^6.2.3",
    "morgan": "^1.10.0",
    "nodemon": "^2.0.7",
    "passport": "^0.5.2",
    "passport-jwt": "^4.0.0",
    "winston": "^3.3.3",
    "xss-clean": "^0.1.1"
  },
  "lint-staged": {
    "*.ts": [
      "npm run lint",
      "npm run prettier:fix",
      "npm run test"
    ]
  }
}
